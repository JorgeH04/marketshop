<% include ../partials/_header %>



<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Agregue un nuevo producto</h3>
    </div>
    <div class="card-body">
      <form action="/ofertauno/new-ofertauno" method="POST">



   
        <div class="form-group">
          <input type="text" name="name" class="form-control" placeholder="name" autofocus/>
        </div>
       <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="title" autofocus/>
        </div>
        <div class="form-group">
            <input type="text" name="image" class="form-control" placeholder="imagen 1" autofocus/>
          </div>
          <div class="form-group">
            <input type="text" name="imagedos" class="form-control" placeholder="imagen 2" autofocus/>
          </div>
          <div class="form-group">
            <input type="text" name="imagetres" class="form-control" placeholder="imagen 3" autofocus/>
          </div>
                 <div class="form-group">
            <input type="text" name="description" class="form-control" placeholder="descripcion" autofocus/>
          </div>
                 <div class="form-group">
            <input type="text" name="price" class="form-control" placeholder="precio" autofocus/>
          </div>



        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>




        <div class="col-md-3">

            <div class="product-item">
                <% for(var i = 0; i < ofertauno.length; i++) { %>

                <div class="product-borde-inner">
                    <a href="product_single.html">
                        <img src="<%= ofertauno[i].imagePath %>" class="img img-responsive"/>
                    </a> 

                    <div class="product-price">
                        <a href="product_single.html">DSLR Camera</a><br />
                        <span class="prev-price">
                            <del>200$</del>
                        </span>
                        <span class="current-price">
                            150$
                        </span>
                    </div>

                    <a href="cart.html"  class="btn btn-cart text-center add-to-cart pull-right">
                        <i class="fa fa-cart-plus"></i>
                        Add to cart
                    </a>


                    <a class="btn btn-danger" href="/ofertauno/delete/<%= ofertauno.id %>">
                      Eliminar
                  </a>
                  <a class="btn btn-primary" href="/ofertauno/edit/<%= ofertauno.id %>">
                    Editar
                </a>
                    <div class="clear"></div>
                </div>
                <% } %>

            </div> 

        </div><!-- End Latest products[single] -->  


  
    

        <% include ../partials/_footer %>
        