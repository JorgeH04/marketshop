                                </a>
                                <div class="clearfix"></div>
                            </div>
                        </div> 
                    </div><!-- End Latest products[single] -->  
                                 
                    <div class="col-md-3">
                        <% produno.forEach(function (produn) { %>
    
                        <div class="product-item">
                            <div class="product-borde-inner">
                                <a href="product_single.html">
                                    <img src="<%= produn.image %>" class="img img-responsive"/>
                                </a> 
      
                                <div class="product-price">
                                    <a href="product_single.html"><%= produn.title %></a><br />
                                    <span class="prev-price">
                                        <del>200$</del>
                                    </span>
                                    <span class="current-price">
                                        <%= produn.price %> $
                                    </span>
                                </div>
      
                                <a href="cart.html"  class="btn btn-cart text-center add-to-cart pull-right">
                                    <i class="fa fa-cart-plus"></i>
                                    Add to cart
                                </a>
                                <div class="clearfix"></div>
                            </div>
                        </div> 
                    </div><!-- End Latest products[single] -->  
